<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <% if @answer.errors.present? %>
    <div>
      <h2><%= pluralize(@answer.errors.count, 'error') %> deteceted:</h2>
      <ul>
        <%= @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label "Текст ответа:" %>
    <br>
    <%= form.text_area :body, id: :answer_body, size: "120x5" %>
    <br>
    <%= form.label "Правильно" %>
    <%= form.check_box :correct, id: :answer_correct %>
  </div>
  <%= form.submit  %>
<% end %>
