<div class="container">
  <div class="row">
    <div class="col col-md-8">
      <%= form_with model: [:admin, @test], local: true do |form| %>
        <%= render 'shared/errors', resource: @test %>
        <div class="form-group">
          <p>
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control"  %>
          </p>
          <div>
            <%= form.label :category_id %>
            <%= form.collection_select :category_id, Category.order(:title), :id, :title, prompt: true %>
          </div>
          <div>
            <%= form.label :timer, t(".timer_in_seconds") %>
            <%= form.number_field :timer, step: 1, min: 0 %>
          </div>
          <div class="form-check">
            <%= form.label :publish, class: "form-check-label" do%>
              <%= form.check_box :published, id: :publish, class: "form-check-input" %>
              <%= t('.publish') %>
            <% end %>
          </div>
          <%= form.submit t(".save"), name: "save", class: "btn btn-primary"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
