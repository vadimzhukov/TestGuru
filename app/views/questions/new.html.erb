<h2>Добавьте новый вопрос для теста "<%= Test.find(params[:test_id]).title %>" </h2>

<form action="/tests/<%= params[:test_id]%>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input type="hidden" name="question[test_id]" value="<%= params[:test_id]%>" id="question-test_id">

  <div>
    <label>Текст вопроса:</label>
    <input type="text" name="question[body]" id="question-body">
  </div>

  <input type="submit" value="Add">

</form>