<%= form_with model: [@test, @question], local: true do |form| %>
  <% if @question.errors.present? %>
    <div>
      <h2><%= pluralize(@question.errors.count, 'error') %> deteceted:</h2>
      <ul>
        <%= @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label "Текст вопроса:" %>
    <br>
    <%= form.text_area :body, id: :question_body, size: "120x5" %>
  </div>
  <%= form.submit  %>
<% end %>
